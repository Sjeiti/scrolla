{
	"source": {
		"include": [ "src", "jsdoc/main.md" ],
		"exclude": [ "myProject/lib/ignore.js" ],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"tags": {
		"allowUnknownTags": true
	},
	"plugins": [
		"plugins/markdown"
	],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": false,
		"default": {
			"outputSourceFiles": true
		},
		"systemName": "Scrolla",
		"footer": "",
		"navType": "vertical",
		"theme": "sjeiti",
		"linenums": true,
		"inverseNav": true,
		"copyright": "Ron Valstar"
	},
	"markdown": {
		"parser": "evilstreak",
		"dialect": "Maruku"
	},
	"opts": {
		"template": "jsdoc/template",
		"tutorials": "jsdoc/tutorials",
		"destination": "doc",
		"recurse": true,
		"private": true
	}
}